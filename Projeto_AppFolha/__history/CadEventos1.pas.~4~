{$R *.dfm}

function TFormCadEventos1.Validado: Boolean;
begin
  Result := false;
  if EditCodigo.Text = '' then
  begin
    ShowMessage('Código deve ser informado.');
    abort;
  end;
  Result := True;
end;

end.
