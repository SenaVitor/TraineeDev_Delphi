unit Produtos;

interface

type
  TProduto = class
    strict private
      FCodigo: Integer;
      FQtd: Integer;
      FValor: Currency;
    public
      property Codigo: Integer read FCodigo write FCodigo;
      property Qtd: Integer read FQtd write FQtd;
      property Valor: Currency read FValor write FValor;
  end;

implementation

var
  P1, P2, P3 : TProduto;

Procedure adicionarP1(Cod, Quantidade: Integer; Val: Currency);

begin
  P1.Codigo := Cod;
  P1.Qtd := Quantidade;
  P1.Valor := Val;
end;

Procedure adicionarP2(Cod, Quantidade: Integer; Val: Currency);

begin
  P2.Codigo := Cod;
  P2.Qtd := Quantidade;
  P2.Valor := Val;
end;

Procedure adicionarP3(Cod, Quantidade: Integer; Val: Currency);

begin
  P3.Codigo := Cod;
  P3.Qtd := Quantidade;
  P3.Valor := Val;
end;

end.
